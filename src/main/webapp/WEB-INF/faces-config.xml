<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

<!-- 

   <navigation-rule>
      <from-view-id>home.xhtml</from-view-id>
      <navigation-case>
         <from-action>#{navigationController.processPage1}</from-action>
         <from-outcome>page</from-outcome>
         <to-view-id>page1.jsf</to-view-id>
      </navigation-case>
      <navigation-case>
         <from-action>#{navigationController.processPage2}</from-action>
         <from-outcome>page</from-outcome>
         <to-view-id>page2.jsf</to-view-id>
      </navigation-case>
   </navigation-rule>
 -->   
    <application>
        <message-bundle>org.demo.pt.stock.web.messages</message-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>zh</supported-locale>
        </locale-config>
    </application>

    
	<navigation-rule>
		<from-view-id>/home.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{navigationController.showPage}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/views/inbox.jsf</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{navigationController.showPage}</from-action>
			<from-outcome>failure</from-outcome>
			<to-view-id>/views/login.jsf</to-view-id>
		</navigation-case>
	</navigation-rule>
	
    <navigation-rule>
        <from-view-id>/stock/getsymbol.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ok</from-outcome>
            <to-view-id>/stock/stockvalue.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
